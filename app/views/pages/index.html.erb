<% if !user_signed_in? #if user not signed in  %>
    
    <style>
       
        body {
             background: linear-gradient(rgba(0,0,0,0), rgba(0,0,0,0)),
             url("/bg3.jpg") no-repeat center center fixed;
            -webkit-background-size: cover;
            -moz-background-size: cover;
            -o-background-size: cover;
        }
        h1 {
            color: #333231;
            font-weight: bold;
            font-family: 'Times New Roman';
            font-size: 35px;
            
        }
        h2 {
            color:#333231;
        }
        span {
            color: #ff7400;
            font-size: 75px;
            border-left: 1px solid #ff7400;
            border-right: 1px solid #ff7400;
        }
        .container-index {
            margin-left: 15%;
            margin-right: 15%;
            margin-top: 10%;
        }
        .text {
          color: #333231; 
          font-size: 16px;
          font-family: 'Times New Roman';
        }
        .footer-links {
            font-size:13px;
            color: #565051
            text-align: center;
            
        }
        
    </style>
   
<div class="container-index row">
    <div class="col-sm-6">
      <h1>Live <span>Life</span> Japan</h1><br>
        <h2>What is Human Resource?</h2><br>
        <p class="text">
        Human resources is used to describe both the people <br>
        who work for a company or organization and the department <br>
        sresponsible for managing resources related to employees. <br>
        </p>
    </div>
    <div class="col-sm-6">
      <div class="log-in panel">
        <div class="login-container">
            <div id="output"></div>
            <div class="avatar"></div>
            <div class="form-box">
                <form action="" method="">
                    <input name="user" type="text" placeholder="username">
                    <input type="password" placeholder="password">
                    <button class="btn btn-info btn-block login" type="submit">Login</button>
                </form>
            </div>
        </div>
      </div>
      
      <div class="sign-up panel">
          
      </div>
    
</div>
<%= render '/layouts/footer' %>

<% else %>

    Signed in 
    
<% end %>

